<?xml version="1.0" encoding="utf-8"?>
<com.droidlogic.launcher.leanback.view.BorderEffectLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tv_item_source_info_parent"
    android:layout_width="match_parent"
    android:layout_height="53dp"
    android:background="@drawable/tv_bg_source"
    app:animEnable="false">

    <TextView
        android:id="@+id/tv_item_source_info"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginStart="33dp"
        android:layout_marginEnd="50dp"
        android:drawablePadding="20dp"
        android:duplicateParentState="true"
        android:ellipsize="marquee"
        android:gravity="center_vertical"
        android:marqueeRepeatLimit="marquee_forever"
        android:singleLine="true"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:drawableStart="@drawable/input_hdmi"
        tools:text="123" />

    <ImageView
        android:id="@+id/img_source_selected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="18dp"
        android:src="@drawable/icon_source_selected"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />

</com.droidlogic.launcher.leanback.view.BorderEffectLayout>